.todo
  .todo__header
    .todo__header__box1
      =@task.content
    .todo__header__box2
      .todo__header__box2__name
        = current_user.name
        = link_to "戻る", "/", method: :get

  .todo__main
    .todo__main__new
      = form_for [@task,Todo.new] do |f|
        = f.text_field :todo, class: 'todo__main__new__form', placeholder: '新しいToDoを入力してください'
        = f.date_field :date, class: 'todo__main__new__date'
        = f.submit '作成', class: 'todo__main__new__btn'
    .todo__main__list
      - @task.todos.each do |task|
        .todo__main__list__to-do
          = task.todo
          -# = link_to '削除',"/tasks/task_id/todos/#{todo.id}", method: :delete